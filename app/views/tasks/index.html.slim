== render 'shared/focus_task'
== render 'shared/search_form'
.tasks_table
  h1 Tasks Table
  .d-flex.justify-content-around
    .create_pointer.btn.btn-outline-warning onclick='window.location="#{tasks_path(sort_column: "created_at")}"' role="link"
      = created_at_sub
    .end_pointer.btn.btn-outline-warning onclick='window.location="#{tasks_path(sort_column: "end_time")}"' role="link"
      = end_time_sub
    .status_pointer.btn.btn-outline-warning onclick='window.location="#{tasks_path(sort_column: "status")}"' role="link"
      = status_sub
    .priority_pointer.btn.btn-outline-warning onclick='window.location="#{tasks_path(sort_column: "priority")}"' role="link"
      = priority_sub
  table.table.table-hover.table-sm
  table.table.table-hover.table-sm
    tr.task_category.bg-white
      th ID
      th = Task.human_attribute_name(:name)
      th = Task.human_attribute_name(:memo)
      th = Task.human_attribute_name(:end_time)
      th = Task.human_attribute_name(:status)
      th = Task.human_attribute_name(:priority)
      th = Task.human_attribute_name(:label)
      th 編集/削除
      th DONE?
    - @tasks.where.not(status: "done").each do |task|
      tr.task_category.shadow-sm.rounded onclick='window.location="#{'/tasks/' + task.id.to_s}"' role="link"
        = link_to task do
          td.task_id
            = task.id
        td.task_name
          = task.name
        td = simple_format(task.memo)
          = link_to
        td class= "task_end_time #{end_time_color(task)}"
          = l task.end_time, format: :short
        td.task_status
          = task.status
        td.task_priority
          = task.priority
        td
          - task.labels.each do |label|
            .badge.badge-pill.badge-warning.mr-1
              = label.name
        td
          = link_to edit_task_path(task.id)
            i.fa.fa-edit.fa-2x
          span.delete= link_to task, method: :delete, remote: true, data:{ confirm: "Are you sure you wanna delete 【#{task.name}】?"}
            i.fa.fa-trash.fa-2x
        td = button_to 'Done', done_path(task), method: :post, class:"btn btn-outline-warning"
  = paginate @tasks

  .form.shadow.p-5.rounded.mb-3
    h3 CSV for Task
    .form-row
      .col-4
        b CSVファイルのダウンロード
      .col-5
        = link_to 'Download', tasks_path(format: :csv), class:"btn btn-outline-warning mb-3"
    b CSVファイルのインポート
    = form_tag import_tasks_path, multipart: true, class: 'mb-5' do
      = file_field_tag :file
      = submit_tag 'Import', class: 'btn btn-outline-warning'

  .btn.btn-outline-secondary.my-3#done_btn
    |  Done Task

  #done_group
    h2
      i.fa.fa-check-square
      | Done Task
    table.table.table-hover.table-sm
      tr.bg-white
        th ID
        th = Task.human_attribute_name(:name)
        th = Task.human_attribute_name(:end_time)
        th = Task.human_attribute_name(:status)
        th = Task.human_attribute_name(:priority)
      - @done_tasks.each do |task|
        tr class= "task_category shadow-sm rounded bg-0" onclick='window.location="#{'/tasks/' + task.id.to_s}"' role="link"
          td = task.id
          td = task.name
          td = l task.end_time, format: :short
          td.task_status
            = task.status
          td = task.priority
    = paginate @done_tasks

javascript:
  $(function () {
    $("#done_btn").on("click", () => {
      $("#done_group").slideToggle();
    });
  });
